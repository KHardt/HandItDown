@model IEnumerable<HandItDown.Models.Clothing>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create"  class="btn-primary btn-sm" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClothingType)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClothingType.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                <a asp-action="Edit"  class="btn-primary btn-sm" asp-route-id="@item.ClothingId">Edit</a> |
                <a asp-action="Details"  class="btn-primary btn-sm" asp-route-id="@item.ClothingId">Details</a> |
                <a asp-action="Delete"  class="btn-primary btn-sm" asp-route-id="@item.ClothingId">Delete</a>
            </td>
        </tr> 
}
    </tbody>
</table>
